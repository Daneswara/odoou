<odoo>
    <data>
        <record id="view_ka_account_settings_form" model="ir.ui.view">
            <field name="name">ka_account.settings.form</field>
            <field name="model">ka_account.settings</field>
            <field name="arch" type="xml">              
                <form string="KA Custom Account Feature Settings" version="7" create="false" duplicate="false" delete="false"> 
                    <sheet>
                    	<group string="AutoPosting R/K">
                            <field name="autopost_rk"/>
                            <field name="autopost_account_voucher" attrs="{'invisible':[('autopost_rk','=',False)]}"/>
                            <field name="autopost_account_move" attrs="{'invisible':[('autopost_rk','=',False)]}"/>
                        </group>
                        <group string="Auto Fill Invoice Lines Account">
                            <field name="auto_fill_account_invoice_line"/>
                            <field name="invoice_line_account_combination" attrs="{'invisible':[('auto_fill_account_invoice_line','=',False)]}">
                                <tree editable="bottom">
                                    <field name="order_type"/>
                                    <field name="product_type"/>
                                    <field name="analytic_type"/>
                                    <field name="account_template_id"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_view_ka_account_settings" model="ir.actions.act_window">
            <field name="name">Custom Feature Account Settings</field>
            <field name="res_model">ka_account.settings</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.server" id="action_server_view_ka_account_settings">
            <field name="name">Custom Feature Account Settings</field>
            <field name="model_id" ref="model_ka_account_settings"/>
            <field name="state">code</field>
            <field name="sequence">1</field>
            <field name="code">
                action = model.open_settings()
            </field>
        </record>

        <menuitem id="menu_ka_account_settings" 
            name="Feature Settings" 
            parent="account.menu_finance" 
            sequence="7" 
            action="action_server_view_ka_account_settings"/>
    </data>
</odoo>